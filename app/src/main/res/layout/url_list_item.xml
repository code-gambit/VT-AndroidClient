<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/root_side_margin"
    android:layout_marginEnd="@dimen/root_side_margin"
    android:layout_marginBottom="@dimen/root_side_margin"
    app:cardBackgroundColor="@color/raw_primary_light"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:lines="1"
            android:textColor="@color/raw_black"
            android:textSize="18sp"
            tools:text="demo"
            android:padding="8dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>