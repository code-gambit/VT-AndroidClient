<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VTransfer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
    </style>

    <style name="Theme.OnBoardingTheme" parent="Theme.VTransfer">
        <item name="android:background">@color/primary</item>
    </style>

    <!--style name="Splash.theme" parent="Theme.VTransfer">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style-->

    <style name="welcome_thin_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/welcome_light_text_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:translationY">70dp</item>
        <item name="android:alpha">0</item>
        <item name="android:layout_marginTop">-14dp</item>
    </style>

    <style name="welcome_thick_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/welcome_light_text_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:translationY">70dp</item>
        <item name="android:alpha">0</item>
        <item name="android:layout_marginTop">-14dp</item>
    </style>

    <style name="on_boarding_large_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/on_boarding_large_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:transitionName">@string/on_boarding_large_text_transition_name</item>
        <item name="android:layout_marginStart">@dimen/on_boarding_text_start_margin</item>
        <item name="android:layout_marginBottom">28dp</item>
    </style>

    <style name="on_boarding_small_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/on_boarding_info_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:transitionName">@string/on_boarding_small_text_transition_name</item>
        <item name="android:alpha">0.8</item>
        <item name="android:layout_marginStart">@dimen/on_boarding_text_start_margin</item>
    </style>

</resources>