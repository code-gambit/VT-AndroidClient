<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VTransfer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="Theme.OnBoardingTheme" parent="Theme.VTransfer">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="welcome_thin_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/welcome_light_text_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:translationY">70dp</item>
        <item name="android:alpha">0</item>
        <item name="android:layout_marginTop">-14dp</item>
    </style>

    <style name="welcome_thick_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/welcome_light_text_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:translationY">70dp</item>
        <item name="android:alpha">0</item>
        <item name="android:layout_marginTop">-14dp</item>
    </style>

    <style name="on_boarding_large_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/on_boarding_large_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:transitionName">@string/on_boarding_large_text_transition_name</item>
        <item name="android:layout_marginStart">@dimen/on_boarding_text_start_margin</item>
        <item name="android:layout_marginBottom">28dp</item>
    </style>

    <style name="on_boarding_small_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/on_boarding_info_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:transitionName">@string/on_boarding_small_text_transition_name</item>
        <item name="android:alpha">0.8</item>
        <item name="android:layout_marginStart">@dimen/on_boarding_text_start_margin</item>
    </style>

    <style name="search_input_theme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorControlActivated">@color/secondary</item>
        <item name="android:layout_marginEnd">@dimen/search_input_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/search_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/search_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/search_input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/search_input_corner_radius</item>
    </style>

    <style name="input_theme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/secondary</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="boxStrokeColor">@color/input_box_selector_color</item>
        <item name="hintTextColor">@color/secondary</item>
        <item name="android:theme">@style/editText_cursor_theme</item>
    </style>

    <style name="editText_cursor_theme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/secondary</item>
    </style>

    <style name="input_theme.editText" parent="Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/primary</item>
        <item name="colorOnSurface">@color/primary</item>
    </style>

    <style name="bottom_nav_fab_style" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
        <item name="shapeAppearanceOverlay">@style/fab_style.appearance</item>
    </style>

    <style name="fab_style.appearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20%</item>
    </style>

    <style name="circle_image_view_style" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="shapeAppearanceOverlay">@style/profile_image_shape_appearance</item>
    </style>

    <style name="profile_image_shape_appearance" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>